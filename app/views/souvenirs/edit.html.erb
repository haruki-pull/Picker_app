<%= form_for(@souvenir) do |f| %>
<%= render 'shared/error_messages' %>

　　<%= f.label :name %>
    <%= f.text_field:name %>

　　<%= f.label :spot %>
    <%= f.text_field:spot %>

　　<%= f.label :price %>
    <%= f.text_field:price %>

　　<%= f.label :picture %>
　　<%= f.file_field :picture %>

　　<%= f.label :genre %>
    <%= f.select :genre, [ ["ごはん","food"], ["飲み物","drink"], ["雑貨","goods"] ] %>

　　<%= f.label :comment %>
　　<%= f.text_area :comment %>

    <%= f.submit %>

<% end %>