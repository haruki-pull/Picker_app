<%= form_for(user) do |f| %>
<%= render 'shared/error_messages', object: f.object %>

　　<%= f.label :名前 %>
    <%= f.text_field:name ,class: "form_item"%>

　　<%= f.label :Eメール %>
    <%= f.email_field:email ,class: "form_item"%>

    <%= f.label :あなたのパスワード %>
    <%= f.password_field :password ,class: "form_item"%>

    <%= f.submit %>

<% end %>